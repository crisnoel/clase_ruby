<p id="notice"><%= notice %></p>
<br>
<div class="container">
<h1>Events</h1>


<div class="col-md-6">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Max students</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.max_students %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event, :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Register', register_to_event_path(event), class: "btn btn-primary" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Event', new_event_path %>
</div>
</div>